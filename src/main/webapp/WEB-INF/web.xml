	<servlet>
		<servlet-name>RandImage</servlet-name>
		<servlet-class>com.cn.ub.common.RandImageServlet</servlet-class>
		<init-param>
			<description>要生成的字符个数</description>
			<param-name>charCount</param-name>
			<param-value>4</param-value>
		</init-param>
		<init-param>
			<description>干扰线条数</description>
			<param-name>lineCount</param-name>
			<param-value>0</param-value>
		</init-param>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>RandImage</servlet-name>
		<url-pattern>/RandImage</url-pattern>
	</servlet-mapping>
	
	
	
	
	<filter>
		<filter-name>characterEncodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>characterEncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	 <welcome-file-list>
		<welcome-file>/WEB-INF/views/login.jsp</welcome-file>
	</welcome-file-list> 
</web-app>